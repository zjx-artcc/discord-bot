{
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./build",
    "allowJs": true,
    "target": "ES2024",
    "esModuleInterop": true,
    "lib": ["ES2021", "DOM"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "inlineSources": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "database.types.ts"]
}
